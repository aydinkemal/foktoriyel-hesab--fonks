#include<stdio.h>


int faktoriyel(int sayi);

int main()
{
	
	int sayi;
	printf("Bir sayi giriniz");
	scanf_s("%d",&sayi);
	faktoriyel(sayi);
	printf("sonuc= %d",faktoriyel(sayi));
	return 0;
}
int faktoriyel(int sayi)
{
	int sonuc =1;
	for (int i =sayi ;i>=0; i--)
	{
		if (i ==0)
		{
			sonuc =sonuc*1;
		}
		if (i == 1)
		{
			sonuc =sonuc*1;
		}
		if (i >=2)
		{
			sonuc=sonuc*i;
			
		}
	}
	return sonuc;
}

